@model List<Article>

<h1>Customer Home</h1>

<div class="card-container">
    <div class="card card-large">
        @if (Model.Count > 0)
        {
            var firstArticle = Model[0];
            <h2>@firstArticle.Title</h2>
            <img src="@firstArticle.Content" alt="@firstArticle.Title" />
            <p>@firstArticle.Description</p>
            <p><strong>Category:</strong> @firstArticle.Category</p>
            <p><strong>Publication Date:</strong> @firstArticle.PublicationDate.ToShortDateString()</p>
        }
    </div>
    <div class="card card-small-group">
        @if (Model.Count > 1)
        {
            var secondArticle = Model[1];
            <div class="card card-small">
                <h2>@secondArticle.Title</h2>
                <img src="@secondArticle.Content" alt="@secondArticle.Title" />
                <p>@secondArticle.Description</p>
                <p><strong>Category:</strong> @secondArticle.Category</p>
                <p><strong>Publication Date:</strong> @secondArticle.PublicationDate.ToShortDateString()</p>
            </div>
        }
        @if (Model.Count > 2)
        {
            
             
            





            var thirdArticle = Model[2];
            <div class="card card-small">
                <h2>@thirdArticle.Title</h2>
        <div class="image-container">
                <img src="@thirdArticle.Content" alt="@thirdArticle.Title" />
            </div>
                <p>@thirdArticle.Description</p>
                <p><strong>Category:</strong> @thirdArticle.Category</p>
                <p><strong>Publication Date:</strong> @thirdArticle.PublicationDate.ToShortDateString()</p>
            </div>
        }
    </div>
</div>

@if (Model.Count > 3)
{
    <div class="article-list">
        <h2>Other Articles</h2>
        <div class="card-row-container">
            @for (int i = 3; i < Model.Count; i += 2)
            {
                var article1 = Model[i];
                var article2 = (i + 1 < Model.Count) ? Model[i + 1] : null;
                <div class="card-row">
                    <div class="card card-small">
                        <h2>@article1.Title</h2>
                        <img src="@article1.Content" alt="@article1.Title" />
                        <p>@article1.Description</p>
                        <p><strong>Category:</strong> @article1.Category</p>
                        <p><strong>Publication Date:</strong> @article1.PublicationDate.ToShortDateString()</p>
                    </div>
                    @if (article2 != null)
                    {
                        <div class="card card-small">
                            <h2>@article2.Title</h2>
                            <img src="@article2.Content" alt="@article2.Title" />
                            <p>@article2.Description</p>
                            <p><strong>Category:</strong> @article2.Category</p>
                            <p><strong>Publication Date:</strong> @article2.PublicationDate.ToShortDateString()</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}

